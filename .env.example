# Server Configuration
PORT=8003
NODE_ENV=development # Use 'production' in production environment

# Client Configuration
CLIENT_URL=http://localhost:5173

# OpenAI Configuration
OPENAI_API_KEY=<your-openai-api-key>
OPENAI_MODEL=gpt-4-0125-preview # Model to use for AI responses
API_TIMEOUT=30000 # API timeout in milliseconds

# Financial API Configuration
YAHOO_LINK=https://query1.finance.yahoo.com/v8/finance/chart/
SERVICE_URL=<your_stock_service_url>
OMNI_URL=<your_omni_ai_url>

# Security
DUMMY_API_KEY=<your_dummy_api_key> # Replace with proper API key mechanism
VC_JWT=<your-vc-jwt-token> # Store securely and rotate regularly

# Log Configuration
LOG_RETENTION_DAYS=30 # Number of days to keep logs
LOG_FILE_PATH=./logs/queries.log

# Stock symbols (comma-separated)
STOCK_SYMBOLS=TSLA,AAPL,GOOGL,AMZN,MSFT,NFLX

# Verifiable Credential data (complete JSON object)
# VC_DATA={"@context":["https://www.w3.org/2018/credentials/v1"],"type":["VerifiableCredential","ai"],"id":"urn:uuid:EXAMPLE","issuer":"did:dht:example","issuanceDate":"2024-01-01T00:00:00Z","credentialSubject":{"id":"did:dht:example","email":"example@example.com","company":"Company Name"}}

# Or individual VC fields
VC_ID=urn:uuid:example-id
VC_ISSUER=did:dht:example-issuer
VC_SUBJECT_ID=did:dht:example-subject
